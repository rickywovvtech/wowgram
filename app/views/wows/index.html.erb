<p id="notice"><%= notice %></p>

<h1>Wows</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wows.each do |wow| %>
      <tr>
        <td><%= wow.description %></td>
        <% if wow.picture.present? %>
           <td><%= image_tag(wow.picture.url,size:'210') %></td>
        <%end%>
        <td><%= link_to 'Show', wow %></td>
        <td><%= link_to 'Edit', edit_wow_path(wow) %></td>
        <td><%= link_to 'Destroy', wow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

