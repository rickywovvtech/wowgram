
<p>
<strong>Description:</strong>
<%= @wow.description %>
</p>


<p>
<strong>Picture:</strong>
<% if @wow.picture.present? %>
    <td><%= image_tag(@wow.picture.url,size:'210') %></td>
<%end%>
</p>
<% @comment.each do |comment| %>
    <p><%= comment.comment %></p>
<%end%>

<form action='/users/wows/submit_comment' method='post'>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :id , @wow_id %>
<label for='uname'>Comment</label>
<input type='text' placeholder='enter comment' name='uname' required >
<button type='submit'>Add comment</button>
</form>